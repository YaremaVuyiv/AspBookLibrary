@using System.Security.Claims
@using AspBookLibrary.Extensions

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new {id = "logoutForm", @class = "navbar-nav form-inline"}))
    {
        @Html.AntiForgeryToken()

        <li class="nav-item">@Html.ActionLink("Books", "Books", "Home", routeValues: null, htmlAttributes: new { id = "genresLink", @class = "nav-link" })</li>
        <li class="nav-item"><a href="@Url.Action("AddBook", "Books")" class="nav-link">Upload Book</a></li>

        if (User.IsInRole(RoleTypes.Manager.Get()))
        {
            <li class="nav-item"><a href="@Url.Action("Users", "Manage")" class="nav-link">Manage Users</a></li>
        }

        if (User.IsInRole(RoleTypes.Moderator.Get()))
        {
            <li class="nav-item"><a href="@Url.Action("Books", "Manage")" class="nav-link">Manage Books</a></li>
        }

        <li class="nav-item">
            <a href="@Url.Action("Index", "Manage")" class="nav-link" data-toggle="tooltip" data-placement="bottom" title="User Account">
                @if (User.Identity.GetUserAvatar() != String.Empty)
                {
                    <img src="~/Content/images/@User.Identity.GetUserAvatar()" class="rounded" width="35" height="35"/>
                }
            </a>
        </li>
        <li class="nav-item"><a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link">Log off</a></li>
    }
}
else
{

    <ul class="navbar-nav">
        <li class="nav-item">@Html.ActionLink(Resources.Resource.Books, "Books", "Home", routeValues: null, htmlAttributes: new { id = "genresLink", @class = "nav-link" })</li>
        <li class="nav-item">@Html.ActionLink(Resources.Resource.Register, "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink", @class = "nav-link"})</li>
        <li class="nav-item">@Html.ActionLink(Resources.Resource.Login, "Login", "Account", routeValues: new { returnUrl = "/manage" }, htmlAttributes: new {id = "loginLink", @class = "nav-link"})</li>
    </ul>
}