@using AspBookLibrary.Extensions
@using AspBookLibrary.Models
@{
    ViewBag.Title = "Genres";
    List<KeyValuePair<string, int>> genreCounts = ViewBag.NumberOfBooksForGenre;
}

@if (ViewBag.Books == null)
{
    <div class="row">
        @foreach (string item in Enum.GetNames(typeof(GenreTypes)))
        {
            <div class="col-md-4" style="margin-bottom: 25px;">
                <a href="@Url.Action("Genres", new {name = item})" class="card text-center">
                    <div class="card-block">
                        <blockquote class="card-blockquote">
                            <h1>@item</h1>
                        </blockquote>
                        <h5>@genreCounts.FirstOrDefault(k => k.Key == item).Value</h5>
                    </div>
                </a>
            </div>
        }
    </div>
}
else
{
    <div class="row">
        @foreach (BookModel book in @ViewBag.Books)
        {
            <div class="col-md-4" style="margin-bottom: 25px;">
                <div class="book-card-layout card card-inverse card-no-border">
                    <img class="card-img" src="~/Content/images/thumbnails/@book.PictureFileUrl" alt="@book.Title">
                    <div class="card-img-overlay">
                        <h2 class="card-title book-title-font">@book.Title</h2>
                        <p class="card-text">@book.Description.</p>
                        <p class="align-bottom"><a class="btn btn-outline-secondary" href="~/Content/books/@book.BookFileUrl">Start Reading</a></p>
                    </div>
                </div>
            </div>
        }
    </div>
}