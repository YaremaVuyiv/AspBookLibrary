@model AspBookLibrary.Models.EditUserInformationViewModel
@{
    ViewBag.Title = "Edit Details";
}

<p>On this page you can edit your account details.</p>
<div class="alert alert-info"><strong>Heads up!</strong> Before saving your changes please be sure they are correct.</div>
<br />

@using (Html.BeginForm("EditUserInfo", "Manage", FormMethod.Post, new { role = "form", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="row">
        <div class="col-md-8">
            <div class="form-group row">
                @Html.LabelFor(m => m.AvatarImage, new {@class = "col-md-4 control-label"})
                <label class="col-md-8 input-group">
                    <input type="file" id="file" name="AvatarImage" class="form-control">
                    <span class="input-group-addon">Browse</span>
                </label>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Firstname, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Firstname, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Lastname, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Lastname, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Address1, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Address1, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(m => m.Address2, new {@class = "col-md-4 control-label"})
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Address2, new {htmlAttributes = new {@class = "form-control"}})
                </div>
            </div>

            <div class="form-group row">
                <div class="col">
                    <a href="@Url.Action("Index", "Manage")" class="btn btn-secondary">Back to account page</a>
                    <input type="submit" value="Save" class="btn btn-primary"/>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <img src="~/Content/images/@ViewBag.AvatarUrl" class="rounded mx-auto d-block" alt="Avatar Image" width="200">
        </div>
    </div>
    
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}